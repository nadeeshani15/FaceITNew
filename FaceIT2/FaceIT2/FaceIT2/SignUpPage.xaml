<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaceIT2.SignUpPage"
             BackgroundColor="Azure"
             Title="Sign Up">

    <StackLayout Padding="5,20,5,0">
        <Label Text="Let's Create New Account"/>

        <StackLayout Padding="5, 20,5,0">
            <Entry Keyboard="Text" Placeholder="Name" />
            <Entry Keyboard="Email" Placeholder="Email" />
            <Entry IsPassword="True" Placeholder="Password" />
            <Entry IsPassword="True" Placeholder="Re-Enter Password" />
        </StackLayout>
        <StackLayout >
            <Button Text="Create Account"  />
        </StackLayout>
    </StackLayout>
</ContentPage>